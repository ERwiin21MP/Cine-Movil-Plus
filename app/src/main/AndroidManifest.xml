<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_app"
        android:name=".CineMovilPlusApp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CineMovilPlus"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.signUp.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.Index.IndexActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.forgotPassword.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.splashScreen.SplashScreenActivity"
            android:theme="@style/Theme.CineMovilPlus.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>