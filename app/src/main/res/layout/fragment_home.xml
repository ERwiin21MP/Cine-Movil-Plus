<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_8">

            <include
                android:id="@+id/homeContainerViewPager2"
                layout="@layout/home_container_view_pager_2" />

            <include
                android:id="@+id/homeContainerPlatforms"
                layout="@layout/home_container_platforms" />

            <include
                android:id="@+id/homeContainerAllContent"
                layout="@layout/home_container_all_content" />

            <include
                android:id="@+id/homeContainerCurrentYear"
                layout="@layout/home_container_current_year" />

            <include
                android:id="@+id/homeContainerGenders"
                layout="@layout/home_container_genders" />

            <include
                android:id="@+id/homeContainerCineMovilPlusNews"
                layout="@layout/home_container_cine_movil_plus_news" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/BannerAd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red" />
</LinearLayout>