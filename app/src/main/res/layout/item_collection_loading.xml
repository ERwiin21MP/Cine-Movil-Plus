<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/spacing_recycler_view"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/collectionWidth"
        android:layout_height="@dimen/collectionHeight"
        app:cardBackgroundColor="@color/loading"
        app:cardCornerRadius="16dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/loading"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:paddingHorizontal="@dimen/spacing_8"
        android:textColor="@color/loading"
        android:textStyle="bold"
        tools:text="Cuestion de tiempo" />
</LinearLayout>