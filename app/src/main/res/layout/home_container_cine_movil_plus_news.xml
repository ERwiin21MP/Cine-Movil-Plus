<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loadingCineMovilPlusNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true">

        <include layout="@layout/home_container_content_loading" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/tvLabelCineMovilPlusNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/section_separation_size"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/CineMovilPlusNews"
        android:textSize="@dimen/text_subtitle"
        android:textStyle="bold"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCineMovilPlusNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/separation_size_between_recyclerview_and_section_title"
        android:visibility="gone" />
</LinearLayout>